            gotoxy(20, 12); cout << "\tA. " << options[i][0] << endl;
            gotoxy(20, 13); cout << "\tB. " << options[i][1] << endl;
            gotoxy(20, 14); cout << "\tC. " << options[i][2] << endl;
            gotoxy(20, 15); cout << "\tD. " << options[i][3] << endl;
            gotoxy(20, 17); cout << "\t  Select Option >> ";

            cin >> answer;
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');

            answer = toupper(answer);
            if (answer == 'A' || answer == 'B' || answer == 'C' || answer == 'D') {
                if (answer == correctAnswers[i]) {
                    nstpScore++;
                    cout << "\nCorrect! Well done." << endl;
                } else {
                    cout << "\nIncorrect. The correct answer is " << correctAnswers[i] << "." << endl;
                }
                
                Answered = true;
                
            } 
        }
    }

    nstpEquivalent = 65 + ((commScore * 35.0) / numQuestions); 
    
    if (nstpScore >= 8) {
        nstpRemark = "Excellent";
    } else if (nstpScore >= 5) {
        nstpRemark = "Average";
    } else {
        nstpRemark = "Failed";
    }

    nstpAnswered = true;
    system("CLS");
}


void fitSubject() {
    char answer;
    fitScore = 0;
    int numQuestions = 10;
    

    string questions[] = {
        "1.) Which of the following is a component of health-related fitness?",
        "2.) What is the primary purpose of a warm-up before exercise?",
        "3.) Which type of exercise primarily targets cardiovascular fitness?",
        "4.) What does FITT stand for in exercise planning?",
        "5.) Which of the following is a benefit of regular strength training?",
        "6.) What is the primary function of flexibility exercises?",
        "7.) What is the recommended frequency for cardiovascular exercise to improve fitness?",
        "8.) Which of the following is a measure of exercise intensity?",
        "9.) What does the term \"overload\" refer to in exercise?",
        "10.) Which of the following is a type of static stretching?"
    };

    string options[][4] = {
        {"Agility", "Balance", "Muscular endurance", "Reaction time"},
        {"To increase muscle fatigue", "To raise body temperature and prepare muscles", "To decrease heart rate", "To stretch muscles to their maximum extent"},
        {"Weightlifting", "Sprinting", "Long-distance running", "Yoga"},
        {"Frequency, Intensity, Time, Type", "Flexibility, Intensity, Tempo, Technique", "Fitness, Interval, Time, Training", "Function, Intensity, Tempo, Training"},
        {"Decreased bone density", "Increased muscle mass", "Reduced metabolic rate", "Decreased flexibility"},
        {"To build muscle strength", "To improve range of motion", "To increase cardiovascular endurance", "To enhance reaction time"},
        {"Once a week", "Twice a week", "Three to five times a week", "Daily"},
        {"Repetitions", "Sets", "Heart rate", "Distance"},
        {"Exercising at a very low intensity", "Gradually increasing the demands placed on the body", "Avoiding exercise altogether", "Maintaining the same level of exercise without change"},
        {"Bouncing stretches", "Holding a stretch for a period of time", "Dynamic movements", "Ballistic stretches"}   
    };

    char correctAnswers[] = {'C', 'B', 'C', 'A', 'B', 'B', 'C', 'C', 'B', 'B'};

    for (int i = 0; i < numQuestions; ++i) {
        bool answered = false;
        if (!answered) {
            system("CLS");
        }
        
        while (!answered) {
            gotoxy(20, 10); cout << questions[i] << endl;
            gotoxy(20, 12); cout << "\tA. " << options[i][0] << endl;
            gotoxy(20, 13); cout << "\tB. " << options[i][1] << endl;
            gotoxy(20, 14); cout << "\tC. " << options[i][2] << endl;
            gotoxy(20, 15); cout << "\tD. " << options[i][3] << endl;
            gotoxy(20, 17); cout << "\t  Select Option >> ";

            cin >> answer;
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');

            answer = toupper(answer);
            if (answer == 'A' || answer == 'B' || answer == 'C' || answer == 'D') {
                if (answer == correctAnswers[i]) {
                    fitScore++;
                    cout << "\nCorrect! Well done." << endl;
                } else {
                    cout << "\nIncorrect. The correct answer is " << correctAnswers[i] << "." << endl;
                }
                answered = true;
            } else {
                Answered = false;
                system("CLS");
            }
        }
    }

	fitEquivalent = 65 + ((commScore * 35.0) / numQuestions); 
    
    if (fitScore >= 8) {
        fitRemark = "Excellent";
    } else if (fitScore >= 5) {
        fitRemark = "Average";
    } else {
        fitRemark = "Failed";
    }
    fitAnswered = true;
    system("cls");
}
