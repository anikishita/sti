void Logout() {

    int positions[] = {13, 12, 11, 10, 11, 12, 13, 14, 15, 14};
    int numPositions = sizeof(positions) / sizeof(positions[0]);
    
    for(int cycle = 0; cycle < 3; cycle++) {
        for(int i = 0; i < numPositions; i++) {
            system("cls");
            
			int currentY = positions[i];
            
            gotoxy(30, currentY);
            cout << x << x << "     " << x << x << x << x << x << x << x << "   " << x << x << x << x << "   " << x << x << x << x << x << x << "  " << x << x << " " << x << x << x << "    " << x << x << "  " << x << x << x << x << x << x << endl;
            gotoxy(30, currentY+1);
            cout << x << x << "     " << x << x << "   " << x << x << "  " << x << x << "  " << x << x << "  " << x << x << "   " << x << x << " " << x << x << " " << x << x << x << x << "   " << x << x << " " << x << x << endl;
            gotoxy(30, currentY+2);
            cout << x << x << "     " << x << x << "   " << x << x << "  " << x << x << x << x << x << x << "  " << x << x << "   " << x << x << " " << x << x << " " << x << x << " " << x << x << "  " << x << x << " " << x << x << "  " << x << x << x << x << endl;
            gotoxy(30, currentY+3);
            cout << x << x << "     " << x << x << "   " << x << x << "  " << x << x << "  " << x << x << "  " << x << x << "   " << x << x << " " << x << x << " " << x << x << "  " << x << x << " " << x << x << " " << x << x << "    " << x << x << endl;
            gotoxy(30, currentY+4);
            cout << x << x << x << x << x << x << " " << x << x << x << x << x << x << x << "  " << x << x << "  " << x << x << "  " << x << x << x << x << x << x << "  " << x << x << " " << x << x << "   " << x << x << x << x << "  " << x << x << x << x << x << x << "   " << x << x;
            
            
            if (i % 3 == 0) {
                cout << "  " << x << x << endl;
            } else if (i % 3 == 1) {
                cout << "  " << x << x << "  " << x << x << endl;
            } else {
                cout << endl;
            }
            
            Sleep(50);
        }
    }
    
    system("cls");
}

void commSubject() {
    char answer;
    int numQuestions = 10;
    commScore = 0;

    string questions[] = {
        "1. Purposive communication focuses on:",
        "2. Which of the following is NOT a key element of communication:",
        "3. What is the term for the process of interpreting a message:",
        "4. Which communication barrier involves using unfamiliar language:",
        "5. What type of communication is used to inform or explain:",
        "6. Which communication style emphasizes directness and clarity:",
        "7. What is the term for the context in which communication takes place:",
        "8. Which of the following is a form of nonverbal communication:",
        "9. What is the purpose of persuasive communication:",
        "10. Which of the following is an example of formal communication:",
    };

    string options[][4] = {
        {"Expressing personal feelings", "Communicating for a specific purpose", "Using complex jargon", "Avoiding audience interaction"},
        {"Sender", "Receiver", "Noise", "Random thoughts"},
        {"Encoding", "Decoding", "Transmitting", "Feedback"},
        {"Physical barrier", "Psychological barrier", "Semantic barrier", "Cultural barrier"},
        {"Persuasive", "Informative", "Narrative", "Expressive"},
        {"Passive", "Aggressive", "Assertive", "Manipulative"},
        {"Channel", "Feedback", "Situation", "Noise"},
        {"Email", "Report", "Body language", "Telephone call"},
        {"To inform", "To entertain", "To convince", "To narrate"},
        {"Casual conversation with a friend", "Memo to employees", "Social media post", "Text message to a family member"}
    };

    char correctAnswers[] = {'B', 'D', 'B', 'C', 'B', 'C', 'C', 'C', 'C', 'B'};

    for (int i = 0; i < numQuestions; ++i) {
        commAnswered = false;
        if (commAnswered == false){
            system("CLS");
        }

        while (!commAnswered) {
            gotoxy(20, 10); cout << questions[i] << endl;
            gotoxy(20, 12); cout << "\tA. " << options[i][0] << endl;
