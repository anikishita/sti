void gotoxy(int x, int y) {
    COORD coord;
    coord.X = x;
    coord.Y = y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
}

void registerLog()
{
    string name, pass, confirmPass;
    bool validInput = false;

    while (!validInput) {
        system("cls");
        gotoxy(45, 8); cout << c; for (int i = 1; i <= 30; i++) {cout << e;} cout << l;
        gotoxy(45, 9); cout << a << "       REGISTER FORM          " << a << endl;
        gotoxy(45, 10); cout << b; for (int i = 1; i <= 30; i++) {cout << e;} cout << j;
        
        gotoxy(45, 12); cout << a << " USERNAME: ";
        cin >> name;
        
        
        bool hasSpace = false;
        for (size_t i = 0; i < name.length(); i++) {
            if (name[i] == ' ') {
                hasSpace = true;
                break;
            }
        }
        
        if (hasSpace) {
            gotoxy(45, 18); cout << "Username cannot contain spaces!";
            gotoxy(45, 19); cout << "Press any key to try again...";
            getch();
            continue;
        }
        
        // Check if username already exists
        ifstream checkFile("users.txt");
        string existingUser, existingPass;
        bool userExists = false;
        
        if (checkFile.is_open()) {
            while (checkFile >> existingUser >> existingPass) {
                if (existingUser == name) {
                    userExists = true;
                    break;
                }
            }
            checkFile.close();
        }
        
        if (userExists) {
            gotoxy(45, 18); cout << "Username already exists!";
            gotoxy(45, 19); cout << "Press any key to try again...";
            getch();
            continue;
        }
        
        
        gotoxy(45, 14); cout << a << " PASSWORD: ";
        pass = "";
        char ch = getch();
        while (ch != 13) { 
            if (ch == 8) { 
                if (pass.length() > 0) {
                    pass = pass.substr(0, pass.length() - 1);
                    cout << "\b \b";
                }
            } else if (ch != ' ') {
                pass += ch;
                cout << "*";
            }
            ch = getch();
        }
        
        if (pass.length() < 4) {
            gotoxy(45, 18); cout << "Password must be at least 4 characters!";
            gotoxy(45, 19); cout << "Press any key to try again...";
            getch();
            continue;
        }
        
        gotoxy(45, 16); cout << a << " CONFIRM PASSWORD: ";
        confirmPass = "";
        ch = getch();
        while (ch != 13) {
            if (ch == 8) {
                if (confirmPass.length() > 0) {
                    confirmPass = confirmPass.substr(0, confirmPass.length() - 1);
                    cout << "\b \b";
                }
            } else if (ch != ' ') {
                confirmPass += ch;
                cout << "*";
            }
            ch = getch();
        }
        
        if (pass != confirmPass) {
            gotoxy(45, 18); cout << "Passwords do not match!";
            gotoxy(45, 19); cout << "Press any key to try again...";
            getch();
            continue;
        }
        
        validInput = true;
    }
    
    ofstream file("users.txt", ios::app);
    if (file.is_open()) {
        file << name << " " << pass << "\n";
        file.close();
        
        system("cls");
        gotoxy(45, 14); cout << "Registration successful!";
        gotoxy(45, 16); cout << "Press any key to continue...";
        getch();
    } else {
        gotoxy(45, 14); cout << "Error: Unable to save registration.";
        gotoxy(45, 16); cout << "Press any key to continue...";
        getch();
    }
    
    system("cls");
}

bool loginUser() {
    string pass = "", storedName, storedPass;
    char ch;
    int attempts = 0;
    const int MAX_ATTEMPTS = 3;
    
    while (attempts < MAX_ATTEMPTS) {
        system("cls");
        gotoxy(45, 9); cout << "          LOGIN FORM          "<< endl;
        
        
        
        gotoxy(50, 10); cout << "USERNAME: ";
        cin >> name;
        cin.clear();
        cin.ignore(numeric_limits<streamsize>::max(), '\n');
        
        gotoxy(50, 12); cout << "PASSWORD: ";
        pass = "";
        ch = getch();
        
		if (attempts > 0) {
            gotoxy(45, 15); cout << a << " Attempt " << attempts + 1 << " of " << MAX_ATTEMPTS;
        }
        
        while (ch != 13) {
            if (ch == 8) { 
                if (pass.length() > 0) {
                    pass = pass.substr(0, pass.length() - 1);
                    cout << "\b \b";
                }
            } else {
                pass += ch;
                cout << "*";
            }
            ch = getch();
        }
        
       
        ifstream file("users.txt");
        bool found = false;
        
        if (file.is_open()) {
            while (file >> storedName >> storedPass) {
                if (storedName == name && storedPass == pass) {
                    found = true;
                    break;
                }
            }
            file.close();
            
            if (found) {
                
                system("cls");
                gotoxy(50, 14); cout << "Login successful!";
                Sleep(800);
                return true;
            }
        } else {
            gotoxy(45, 18); cout << "Error: Cannot open user file.";
            gotoxy(45, 19); cout << "Press any key to return...";
            getch();
            return false;
        }
        
        attempts++;
        gotoxy(45, 18); cout << "Invalid username or password!";
        
        if (attempts < MAX_ATTEMPTS) {
            gotoxy(45, 19); cout << "Press any key to try again...";
            getch();
        } else {
            gotoxy(45, 19); cout << "Too many failed attempts.";
            gotoxy(45, 20); cout << "Press any key to return...";
            getch();
        }
    }
    
    return false;
}
void saveScores() {
    ofstream scoreFile("user.txt", ios::app);
    if (scoreFile.is_open()) {
        scoreFile << currentUser << " "
        << commScore << " " << commEquivalent << " " << commRemark << "\n";
        scoreFile.close();
    }
}

void loadScores() {
    ifstream scoreFile("user.txt");
    if (scoreFile.is_open()) {
        string username;
        while (scoreFile >> username) {
            if (username == currentUser) {
                scoreFile >> commScore >> commEquivalent >> commRemark;
                break;
            }
        }
        scoreFile.close();
    }
}


